<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="esolutions.com.recloser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".Utils.Application.ApplicationDefault"
        android:allowBackup="true"
        android:icon="@drawable/recloser_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="sensor"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|layoutDirection"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Activity.Class.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activity.Class.MainActivity"></activity>
        <activity android:name=".View.Activity.Class.ConfigActivity" />

    </application>

</manifest>