<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    cardCornerRadius="@dimen/corner_card_row_all_device"
    cardElevation="@dimen/elevation_card_row_all_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_row_connected_device"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tv_row_event_detail_device_recycler_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left"
            android:padding="@dimen/padding_row_param_event_device_detail"
            android:text="Status"
            android:textSize="@dimen/text_size_row_item_status_all_device" />

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/iv_row_event_detail_device_recycler_status"
            android:layout_width="@dimen/size_icon_status_row_event_detail_device_recycler"
            android:layout_height="@dimen/size_icon_status_row_event_detail_device_recycler"
            android:padding="@dimen/padding_row_param_event_device_detail"
            android:src="@drawable/ring_row_info_dashboard_status_turn_on" />


    </LinearLayout>
</android.support.v7.widget.CardView>