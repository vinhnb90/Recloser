<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_top_bottom_card_row_all_device"
    android:layout_marginLeft="@dimen/margin_left_right_card_row_all_device"
    android:layout_marginRight="@dimen/margin_left_right_card_row_all_device"
    android:layout_marginTop="@dimen/margin_top_bottom_card_row_all_device"
    android:elevation="@dimen/elevation_card_row_all_device"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/corner_card_row_all_device">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundTransparent_row_recycler"
        android:orientation="horizontal"
        android:padding="@dimen/padding_card_row_all_device">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_row_connected_device_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="Device Name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_title_activity_main" />

            <TextView
                android:id="@+id/tv_row_connected_device_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_row_connected_device"
                android:text="IP"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_row_item_status_all_device" />

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/padding_card_row_all_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/iv_row_connected_device_name_on_off"
                android:layout_width="@dimen/size_row_item_paramater_all_device_iv_statusOnOff"
                android:layout_height="@dimen/size_row_item_paramater_all_device_iv_statusOnOff"
                android:background="@drawable/ring_row_info_dashboard_status_turn_on" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>