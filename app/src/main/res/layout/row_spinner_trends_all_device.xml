<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorBackgroundTransparent_row_recycler"
    android:padding="@dimen/padding_fragment_detail_device_row_spinner"
    android:weightSum="10">

    <TextView
        android:id="@+id/tv_row_spinner_trends_all_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_fragment_detail_device_row_spinner"
        android:layout_marginRight="@dimen/padding_fragment_detail_device_row_spinner"
        android:layout_weight="10"
        android:gravity="center_horizontal|center_vertical"
        android:text="text"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_row_item_status_all_device"
        android:textStyle="bold" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_spinner_trends_all_device_row"
        android:layout_marginTop="@dimen/margin_spinner_trends_all_device_row">

        <View
            android:background="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>