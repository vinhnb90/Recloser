<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/corner_card_row_all_device"
    app:cardElevation="@dimen/elevation_card_row_all_device">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="@dimen/padding_card_row_all_device">

            <TextView
                android:id="@+id/tv_dialog_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_header_title_row_all_device"
                android:layout_marginTop="@dimen/margin_between_header_title_row_all_device"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="Thông báo"
                android:textSize="@dimen/text_size_title_activity_main"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dialog_layout_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="MEssage"
                android:textSize="@dimen/text_size_row_item_status_all_device" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_layout_button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_top_dialog"
                android:text="Chấp nhận"
                android:textAllCaps="false"
                android:textColor="@color/color_divider_blue"
                android:textSize="@dimen/text_size_title_activity_main" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>