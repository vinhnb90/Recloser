<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ac_main_nav_header_height"
    android:background="@color/ac_main_color_background_header_navi_menu"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/ac_main_nav_header_height"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/ac_main_height_logo_user"
            android:layout_height="@dimen/ac_main_height_logo_user"
            android:src="@drawable/ic_account_circle_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Operator"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title_activity_main"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>




</LinearLayout>
