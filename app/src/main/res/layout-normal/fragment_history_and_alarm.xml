<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="esolutions.com.recloser.View.Fragment.HistoryAndAlarmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_card_row_fragment_update_info"
            android:weightSum="2">

            <Spinner
                android:background="@drawable/spinner_background"
                android:drawSelectorOnTop="false"
                android:gravity="center_horizontal|center_vertical"
                android:popupBackground="@color/colorBackgroundTransparent_row_recycler"
                android:prompt="@string/default_spinner_trends_select"
                android:id="@+id/spin_fragment_history_and_alarm_device"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_right_card_row_all_device"
                android:layout_marginRight="@dimen/margin_left_right_card_row_all_device"
                android:layout_weight="1">

            </Spinner>

            <Spinner
                android:background="@drawable/spinner_background"
                android:drawSelectorOnTop="false"
                android:gravity="center_horizontal|center_vertical"
                android:popupBackground="@color/colorBackgroundTransparent_row_recycler"
                android:prompt="@string/default_spinner_trends_select"
                android:id="@+id/spin_fragment_history_and_alarm_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_left_right_card_row_all_device"
                android:layout_weight="1"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_card_row_fragment_update_info">

            <android.support.v7.widget.CardView
                cardBackgroundColor="@color/colorBackgroundTransparent_row_recycler"
                cardCornerRadius="@dimen/row_info_dashboard_corner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_right_card_row_all_device"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:text="dasddasdasasd"
                    android:id="@+id/tv_fragment_history_and_alarm_date_begin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorBackgroundTransparent_row_recycler"
                    android:drawableRight="@drawable/ic_date"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_row_item_status_all_device" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                cardBackgroundColor="@color/colorBackgroundTransparent_row_recycler"
                cardCornerRadius="@dimen/row_info_dashboard_corner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_right_card_row_all_device"
                android:layout_marginRight="@dimen/margin_left_right_card_row_all_device"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:text="dasddasdasasd"
                    android:id="@+id/tv_fragment_history_and_alarm_date_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorBackgroundTransparent_row_recycler"
                    android:drawableRight="@drawable/ic_date"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_row_item_status_all_device" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_bottom_card_row_all_device">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fragment_history_and_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
